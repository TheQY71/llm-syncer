{
    "manifest_version": 3,
    "name": "Multi LLM Broadcaster",
    "version": "0.1",
    "permissions": ["tabs", "scripting", "activeTab", "storage"],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.doubao.com/*",
        "https://chat.deepseek.com/*",
        "https://www.kimi.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://www.doubao.com/*",
                "https://chat.deepseek.com/*",
                "https://www.kimi.com/*"
            ],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
